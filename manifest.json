{
    "name": "Arafat's Clicker",
    "version": "1.0",
    "description": "Learning how to create a Chrome extension by implementing a simple clicker",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "main.html",
        "default_title": "Clicker"
    },
    "content_security_policy": "script-src 'self' https://use.fontawesome.com; object-src 'self'",
    "permissions": [
        "storage"
    ]
}